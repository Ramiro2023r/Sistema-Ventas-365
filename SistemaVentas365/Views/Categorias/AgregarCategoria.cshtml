@model SistemaVentas365.Models.Categoria


@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";


}

<h2 style="text-align:center; font-size:20px;">Agregar Categorias </h2>
<a asp-action="ListPaCategorias" class="btn btn-secondary">
    <i class="fas fa-arrow-left"></i> Volver Atrás
</a>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AgregarCategoria">
            <!-- Los campos ocultos para Estado y Fecha se agregarán automáticamente con los valores predeterminados -->
            <input type="hidden" asp-for="Fecha" />
            <input type="hidden" asp-for="Estado" />
          
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreC" class="control-label"></label>
                <input asp-for="NombreC" class="form-control" />
                <span asp-validation-for="NombreC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
