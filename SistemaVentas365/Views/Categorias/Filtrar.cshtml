@model IEnumerable<SistemaVentas365.Models.Categoria>

@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";


}


<h2>Busqueda por Nombre</h2>
<a asp-action="ListPaCategorias" class="btn btn-secondary">
    <i class="fas fa-arrow-left"></i> Volver Atrás
</a>


<form asp-action="Filtrar" asp-controller="Categorias">
    <em>Nombre del Categoria</em>
    @Html.TextBox("nombre", "")
    <button>Buscar</button>

</form>


<table class="table-futuristic bg-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Idcategoria">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Idcategoria">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Idcategoria">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<!-- Controles de paginación -->
<div class="text-center">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @for (int i = 0; i < ViewBag.Paginas; i++)
            {
                <li class="page-item @(i == 0 ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Filtrar", "Categorias", new { p = i })">@((i + 1).ToString())</a>
                </li>
            }
        </ul>
    </nav>
</div>

