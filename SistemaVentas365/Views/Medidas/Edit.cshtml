@model SistemaVentas365.Models.Medida


@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";


}

<h2 style="text-align:center; font-size:20px;">Editar Medidas </h2>
<a asp-action="ListPaMedidas" class="btn btn-secondary">
    <i class="fas fa-arrow-left"></i> Volver Atrás
</a>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="miFormulario">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Idmedida" class="control-label"></label>
                <input asp-for="Idmedida" class="form-control" />
                <span asp-validation-for="Idmedida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreM" class="control-label"></label>
                <input asp-for="NombreM" class="form-control" />
                <span asp-validation-for="NombreM" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreCorto" class="control-label"></label>
                <input asp-for="NombreCorto" class="form-control" />
                <span asp-validation-for="NombreCorto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Agrega un event listener para el evento submit del formulario
            document.getElementById('miFormulario').addEventListener('submit', function (event) {
                // Evita que el formulario se envíe de forma predeterminada
                event.preventDefault();

                // Muestra el mensaje de éxito usando SweetAlert2
                Swal.fire({
                    position: "top-end",
                    icon: "success",
                    title: "Registro Editado con Exito",
                    showConfirmButton: false,
                    timer: 1500,
                    // Función que se ejecutará cuando se cierre el mensaje
                    didClose: function () {
                        // Envía el formulario después de mostrar el mensaje
                        document.getElementById('miFormulario').submit();
                    }
                });
            });
        });
    </script>
}
