    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('ingresarBtn').addEventListener('click', function () {
                abrirAlerta();
            });
        });

        function handleFormSubmit(event) {
            event.preventDefault();  // Evitar el envío del formulario
            abrirAlerta();  // Mostrar la alerta
            return false;  // Evitar el envío del formulario
        }

        function abrirAlerta() {
            let timerInterval;
            Swal.fire({
                title: "Bienvenido al Sistema",
                html: "Estas Ingresando <b></b> S.V 365.",
                timer: 3000,
                timerProgressBar: true,
                didOpen: () => {
                    Swal.showLoading();
                    const timer = Swal.getPopup().querySelector("b");
                    timerInterval = setInterval(() => {
                        timer.textContent = `${Swal.getTimerLeft()}`;
                    }, 100);
                },
                willClose: () => {
                    clearInterval(timerInterval);
                    window.location.href = '@Url.Action("Menu", "Inicio")';  // Redirigir después de cerrar la alerta
                }
            }).then((result) => {
                if (result.dismiss === Swal.DismissReason.timer) {
                    console.log("I was closed by the timer");
                }
            });
        }
    </script>

